{
  "name": "whatsapp-integration-platform",
  "version": "1.0.0",
  "description": "WhatsApp Business API Integration Platform",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "server:install": "cd server && npm install",
    "client:install": "cd client && npm install",
    "install:all": "npm install && npm run server:install && npm run client:install"
  },
  "keywords": ["whatsapp", "meta", "facebook", "integration"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
