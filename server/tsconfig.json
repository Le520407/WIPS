{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.optimized.example.ts",
    "src/middleware/groups-permission.middleware.ts",
    "src/controllers/call-quality.controller.ts",
    "src/controllers/notification.controller.ts",
    "src/services/groups-webhook.service.ts"
  ]
}
